<p id="notice"><%= notice %></p>

<h1>Listing Operation States</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @operation_states.each do |operation_state| %>
      <tr>
        <td><%= operation_state.name %></td>
        <td><%= link_to 'Show', operation_state %></td>
        <td><%= link_to 'Edit', edit_operation_state_path(operation_state) %></td>
        <td><%= link_to 'Destroy', operation_state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

